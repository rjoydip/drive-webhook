{
  "name": "drive-webhook",
  "type": "module",
  "scripts": {
    "prepare": "simple-git-hooks && bun run copy-if-missing",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "lint": "oxlint . --fix",
    "lint:check": "oxlint",
    "format": "oxfmt src scripts --write",
    "format:check": "oxfmt src scripts --check",
    "typecheck": "tsgo --noEmit",
    "getAuthURL": "bun run scripts/getAuthURL.ts",
    "genToken": "bun --env-file=.env run scripts/genToken.ts",
    "genClientKey": "bun --env-file=.env run scripts/genClientKey.ts",
    "copy-if-missing": "node -e \"const fs=require('fs'); if(!fs.existsSync('client_secret.json')) fs.copyFileSync('client_secret.example.json','client_secret.json');\""
  },
  "simple-git-hooks": {
    "pre-commit": "bun install --ignore-scripts --offline && bun run lint:check && bun format:check && bun run typecheck"
  },
  "dependencies": {
    "googleapis": "^170.1.0",
    "hono": "^4.11.5",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260123.0",
    "@types/bun": "^1.3.6",
    "@types/signale": "^1.4.7",
    "@typescript/native-preview": "^7.0.0-dev.20260122.4",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "simple-git-hooks": "^2.13.1",
    "wrangler": "^4.60.0"
  }
}
