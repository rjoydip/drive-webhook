{
	"name": "drive-webhook",
	"type": "module",
	"engines": {
		"node": ">=22.0",
		"bun": ">=1.3.5"
	},
	"scripts": {
		"prepare": "simple-git-hooks && bun run copy-if-missing",
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"typecheck": "tsgo --noEmit",
		"getAuthURL": "bun run scripts/getAuthURL.ts",
		"genToken": "bun --env-file=.env run scripts/genToken.ts",
		"genClientKey": "bun run scripts/genClientKey.ts",
		"copy-if-missing": "node -e \"const fs=require('fs'); if(!fs.existsSync('client_secret.json')) fs.copyFileSync('client_secret.example.json','client_secret.json');\""
	},
	"simple-git-hooks": {
		"pre-commit": "bun install --ignore-scripts --offline && bunx biome ci . && bun run typecheck"
	},
	"dependencies": {
		"@hono/standard-validator": "^0.2.2",
		"googleapis": "^170.1.0",
		"hono": "^4.11.5",
		"signale": "^1.4.0",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"@cloudflare/workers-types": "^4.20260123.0",
		"@types/bun": "^1.3.6",
		"@types/signale": "^1.4.7",
		"@typescript/native-preview": "^7.0.0-dev.20260122.4",
		"simple-git-hooks": "^2.13.1",
		"wrangler": "^4.60.0"
	}
}
